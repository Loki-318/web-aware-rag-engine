# Database
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/rag_db

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Qdrant
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=web_documents

# LLM Provider Selection (ollama, openai, or gemini)
LLM_PROVIDER=ollama

# Ollama Settings
OLLAMA_BASE_URL=http://host.docker.internal:11434
OLLAMA_MODEL=llama2

# OpenAI Settings (only needed if LLM_PROVIDER=openai)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=500

# Google Gemini Settings (only needed if LLM_PROVIDER=gemini)
GEMINI_API_KEY=
GEMINI_MODEL=gemini-pro
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=500

# Embedding Model
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Application
CHUNK_SIZE=500
CHUNK_OVERLAP=50
TOP_K_RESULTS=5